@{
    ViewData["Title"] = "Añadir empleado";
}

@model MVC_CRUD.Models.Employee;

<div class="row mt-5">
    <div class="col-sm-8 offset-sm-2">
        <h2 class="text-center">Nuevo empleado</h2>
        <form asp-controller="Employee" asp-action="AddEmployee" method="post">
            <div class="mb-3">
                <label>Nombre completo</label>
                <input class="form-control" asp-for="Name" type="text">
            </div>
            <div class="mb-3">
                <label>Correo</label>
                <input class="form-control" asp-for="Email" type="text">
            </div>
            <div class="mb-3">
                <label>Fecha de contrato</label>
                <input class="form-control" asp-for="ContractDate" type="date">
            </div>
            <div class="mb-3">
                <input class="form-check-input" asp-for="Active" type="checkbox" id="chkActive">
                <label class="form-check-label" for="chkActive">Activo</label>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Employee" asp-action="ListEmployees" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>
